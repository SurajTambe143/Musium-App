<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_detailfragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.fragment.DetailFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_layout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toTopOf="@id/cl_play_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/details_title_image_bg"
                    android:layout_width="400dp"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/bottom_corner"
                    tools:src="@mipmap/ic_launcher" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/details_title_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"
                    android:elevation="20dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:shapeAppearanceOverlay="@style/corner_radius"
                    tools:src="@mipmap/ic_launcher" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_play_container"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@id/cv_layout_release_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_layout">

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toTopOf="@id/details_artist"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/details_artist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@id/seek_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/details_title"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/seek_bar_duration_start"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_Accent"
                    app:layout_constraintBottom_toTopOf="@id/cl_btn_container"
                    app:layout_constraintEnd_toStartOf="@id/seek_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/details_artist" />

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/cl_btn_container"
                    app:layout_constraintEnd_toEndOf="@id/seek_bar_duration_end"
                    app:layout_constraintStart_toEndOf="@id/seek_bar_duration_start"
                    app:layout_constraintTop_toBottomOf="@id/details_artist" />

                <TextView
                    android:id="@+id/seek_bar_duration_end"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textAlignment="gravity"
                    app:layout_constraintBottom_toTopOf="@id/cl_btn_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/seek_bar"
                    app:layout_constraintTop_toBottomOf="@id/details_artist" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_btn_container"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seek_bar">

                    <ImageButton
                        android:id="@+id/play"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/stop"
                        app:layout_constraintStart_toEndOf="@+id/pause"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/play_slant"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_slash_forward"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/stop"
                        app:layout_constraintStart_toEndOf="@+id/pause"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/play_progress_bar"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/stop"
                        app:layout_constraintStart_toEndOf="@+id/pause"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/pause"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        android:src="@drawable/round_replay_5_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/play"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/pause_slant"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_slash_forward"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/play"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/stop"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        android:src="@drawable/round_forward_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/play"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/stop_slant"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:background="@color/transperant"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_slash_forward"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/play"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_layout_release_date"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/light_bg"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toTopOf="@id/lyrics_layout_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_play_container">

                <TextView
                    android:id="@+id/details_release"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/release"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@id/details_release_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/details_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/details_release"
                    tools:text="@string/app_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/lyrics_layout_tv"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/cv_layout_release_date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                layout="@layout/lyrics_item"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>